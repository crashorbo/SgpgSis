{% extends '::backend.html.twig' %}

{% block titulo %}
    Estudiante - Proyecto
{% endblock %}

{% block cerrarsesion %}
    <li><a href="{{ path('estudiante_logout') }}">Cerrar Sesion</a></li>
    <li><a href="{{ path('estudiante_perfil') }}">Perfil</a>
{% endblock %}

{% block tipousuario %}
    <a class="navbar-brand" href="{{ path('estudiante_portada') }}">Estudiante</a>
{% endblock %}

{% block usuariolog %}
    {{usuario}}
{% endblock %}

{% block navegacion %}
    <div class="list-group">
        <a href="{{ path('estudiante_portada') }}" class="list-group-item">Inicio</a>
        <a href="{{ path('estudiante_proyecto') }}" class="list-group-item ">Proyecto</a>
        <a href="{{ path('estudiante_seguimiento') }}" class="list-group-item active">Seguimientos</a>
        <a href="{{ path('estudiante_defensa') }} " class="list-group-item">Defensas</a>
    </div>
{% endblock %}

{% block contenido %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Ingresa Nuevo Seguimiento</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <form action="{{ path('estudiante_seguimiento_nuevo')}}" method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
                        {{ form_errors(form) }}
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Tipo: </label>
                            <div class="col-sm-10">
                                {{ form_errors(form.tipo) }}
                                {{ form_widget(form.tipo, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Archivo: </label>
                            <div class="col-sm-10">
                                {{ form_errors(form.archivo) }}
                                {{ form_widget(form.archivo, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Descripcion: </label>
                            <div class="col-sm-10">
                                {{ form_errors(form.descripcion) }}
                                {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        {{ form_widget(form) }}
                </form>
            </div>
        </div>
    </div>

{% endblock %}