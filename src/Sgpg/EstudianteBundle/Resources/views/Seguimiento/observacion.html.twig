{% extends '::backend.html.twig' %}

{% block titulo %}
    Estudiante - Proyecto
{% endblock %}

{% block cerrarsesion %}
<li><a href="{{ path('estudiante_logout') }}">Cerrar Sesion</a></li>
<li><a href="{{ path('estudiante_perfil') }}">Perfil</a>
{% endblock %}

{% block tipousuario %}
    <a class="navbar-brand" href="{{ path('estudiante_portada') }}">Estudiante</a>
{% endblock %}

{% block usuariolog %}
    {{usuario}}
{% endblock %}

{% block navegacion %}
<div class="list-group">
    <a href="{{ path('estudiante_portada') }}" class="list-group-item">Inicio</a>
    <a href="{{ path('estudiante_proyecto') }}" class="list-group-item ">Proyecto</a>
    <a href="{{ path('estudiante_seguimiento') }}" class="list-group-item active">Seguimientos</a>
    <a href="{{ path('estudiante_defensa') }} " class="list-group-item">Defensas</a>
</div>
{% endblock %}

{% block contenido %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Seguimiento</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <tbody>
                <tr>
                    <td>Tipo de Seguimiento:</td>
                    <td>{{ seguimiento.tipo }}</td>
                </tr>
                <tr>
                    <td>Descripcion del Seguimiento</td>
                    <td>{{ seguimiento.descripcion }}</td>
                </tr>
                <tr>
                    <td>Archivo del Seguimiento</td>
                    <td><a type = "button" class="btn btn-info" onclick="javascript:window.open('{{ asset(directorio_seguimientos ~ seguimiento.rutaArchivo) }}',null,'height=500,width=700,status=no,toolbar=no,menubar=no,location=no,scrollbars=yes');" href="#" target="_Blank">Ver Archivo</a></td>
                </tr>

                </tbody>
            </table>

        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Observaciones</h3>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Fecha</th>
                <th>Descripcion</th>
            </tr>
            </thead>
            <tbody>
            {% for observacion in seguimiento.observaciones %}
                <tr>
                    <td>{{observacion.fechaCreacion|date('d-M-Y')}}</td>
                    <td>{{observacion.descripcion}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}