{% extends '::backend.html.twig' %}

{% block titulo %}
    Administracion - Carrera
{% endblock %}

{% block usuariolog %}
    {{usuario}}
{% endblock %}

{% block navegacion %}
    <div class="list-group">
        <a href="{{ path('backend_portada') }}" class="list-group-item">Inicio</a>
        <a href="{{ path('backend_carrera_portada') }}" class="list-group-item">Carrera</a>
        <a href="{{ path('backend_mencion_portada')}}" class="list-group-item ">Mencion</a>
        <a href="{{ path('backend_especialidad_portada') }}" class="list-group-item">Especialidad</a>
        <a href="{{ path('backend_docente_portada')}}" class="list-group-item">Docente</a>
        <a href="{{ path('backend_estudiante_portada')}}" class="list-group-item">Estudiante</a>
        <a href="{{ path('backend_proyecto_portada') }}" class="list-group-item">Proyecto</a>
        <a href="{{ path('backend_horario_portada') }}" class="list-group-item active">Horario</a>
    </div>
{% endblock %}

{% block contenido %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <td><b>Id:</b></td>
                            <td>{{ horario.id }}</td>
                        </tr>
                        <tr>
                            <td><b>Tipo:</b></td>
                            <td>{{ horario.tipo }}</td>
                        </tr>
                        <tr>
                            <td><b>Hora Inicio:</b></td>
                            <td>{{ horario.horaInicio|date('H:i') }}</td>
                        </tr>
                        <tr>
                            <td><b>Hora Inicio:</b></td>
                            <td>{{ horario.horaFinal|date('H:i') }}</td>
                        </tr>
                    </tbody>
                </table>
                <a type="button" class="btn btn-warning" href=".">Editar</a>
                <a href="button" class="btn btn-danger" href=".">Eliminar</a>
            </div>
        </div>
    </div>
{% endblock %}